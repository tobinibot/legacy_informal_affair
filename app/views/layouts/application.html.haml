!!! 5
%html{lang: 'en'}
  %head
    -# Required meta tags
    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}

    %title InformalAffair
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag("application", "data-turbo-track": "reload")

    %link{rel: "stylesheet", href: "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css"}

    = javascript_importmap_tags

  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        %a.navbar-brand.text-gradient-primary{:href => "#"} Informal Affair
        %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarSupportedContent", "data-bs-toggle" => "collapse", :type => "button"}
          %span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          %ul.navbar-nav.me-auto.mb-2.mb-lg-0
            %li.nav-item
              %a.nav-link{"aria-current" => "page", :href => "/", class: class_names(active: current_page?(action: 'items_2019'))} 2019
            %li.nav-item
              %a.nav-link{:href => "/2018", class: class_names(active: current_page?(action: 'items_2018'))} 2018
            %li.nav-item
              %a.nav-link{:href => "/2017", class: class_names(active: current_page?(action: 'items_2017'))} 2017
            %li.nav-item
              %a.nav-link{:href => "/2016", class: class_names(active: current_page?(action: 'items_2016'))} 2016
            %li.nav-item
              %a.nav-link{:href => "/2015", class: class_names(active: current_page?(action: 'items_2015'))} 2015
            %li.nav-item
              %a.nav-link{:href => "/2014", class: class_names(active: current_page?(action: 'items_2014'))} 2014
            %li.nav-item
              %a.nav-link{:href => "/2013", class: class_names(active: current_page?(action: 'items_2013'))} 2013
            %li.nav-item
              %a.nav-link{:href => "/2012", class: class_names(active: current_page?(action: 'items_2012'))} 2012
            %li.nav-item
              %a.nav-link{:href => "/2011", class: class_names(active: current_page?(action: 'items_2011'))} 2011

    .container-fluid
      = yield